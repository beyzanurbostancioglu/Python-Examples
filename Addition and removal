my_list = []
print("The list is now[]")
i = 0
while True:
   i += 1
   char = input("a(d)d, (r)emove or e(x)it: ")
   if char == "d":
    my_list.append(i)
    print(f"The list is now {my_list}")
   elif char == "r":
     if my_list:
      my_list.pop()
      print(f"The list is now {my_list}")
    
   else:
    print("Bye!")
    break
